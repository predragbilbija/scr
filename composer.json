        "psr-4": {
            "App\\": "_core/classes"
        }
    },
    "require-dev": {
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "php-parallel-lint/php-console-highlighter": "^0.5.0",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "scripts": {
        "lint:cs": "@php ./vendor/bin/phpcs",
